<view class="container">
  <view class="profile-info" >
    <view class="info" bindtap="goLogin">
      <image class="avatar" src="{{userInfo.avatarUrl}}"></image>
      <text class="name">{{userInfo.nickName}}</text>
    </view>

  </view>

  <view class="float-bar">
    <view class="item">
      <view class='a' bindtap='goFootprint'>
        <text class="icon foot-point"></text>
        <text class='txt'>最近浏览</text>
      </view>
    </view>
    <view class='item'>
      <view class='a' bindtap='goCollect'>
        <text class='icon collect'></text>
        <text class='txt'>收藏</text>
      </view>
    </view>
    <view class='item'>
      <view class='a' bindtap='goGroupon'>
        <text class='icon groupon'></text>
        <text class='txt'>团购</text>
      </view>
    </view>
    <view class='item'>
      <view class='a' bindtap='goOrder'>
        <text class='icon order'></text>
        <text class='txt'>订单</text>
      </view>
    </view>
  </view>

  <view class="list-menu">
    <view class='item' bindtap='goCoupon'>
      <text class='txt'>我的优惠券</text>
      <text class='right-icon'></text>
    </view>
    <view class='item' bindtap='goAddress'>
      <text class='txt'>地址管理</text>
      <text class='right-icon'></text>
    </view>
    <view class='item' bindtap='goGame'>
      <text class='txt'>夺宝游戏</text>
      <text class='right-icon'></text>
    </view>
    <view class='while-space'></view>
    <view class='item' bindtap='aboutUs'>
      <text class='txt'>关于我们</text>
      <text class='right-icon'></text>
    </view>
  </view>
